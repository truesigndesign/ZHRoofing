/* Mobile - 360px */
@media only screen and (min-width: 0rem) {
    #sbs-r-870 {
        padding: var(--sectionPadding);
    }
    #sbs-r-870 .cs-container {
        width: 100%;
        max-width: 34.375rem; /* 550px */
        margin: auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: clamp(3rem, 7vw, 4rem);
    }
    
    #sbs-r-870 .cs-picture {
  width: 100%; /* Full width of the parent container */
  max-width: 39.375rem; /* Maximum width (e.g., 630px) */
  height: 39.375rem; /* Set height equal to the width to create a square */
  box-shadow: 0px 2.8px 42px rgba(0, 0, 0, 0.16);
  border-radius: 5%; /* Fully rounded corners, turning it into a circle */
  overflow: hidden;
  align-self: flex-start; /* Ensure the image stays at the top */
  margin-bottom:7rem; /* Add spacing below the image */
}


    #sbs-r-870 .cs-picture img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    #sbs-r-870 .cs-content {
        text-align: left;
        max-width: 33.875rem; /* 542px */
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 1.5rem; /* Add spacing between elements */
        padding: 1.5rem; /* Add padding inside the content area */
    }
    #sbs-r-870 .cs-content h3 {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 1rem; /* Space below headings */
    }
    #sbs-r-870 .cs-content h4 {
        font-size: 1.25rem;
        font-weight: bold;
        margin-bottom: 0.75rem;
    }
    #sbs-r-870 .cs-content p {
        line-height: 1.8; /* Improve readability */
        margin-bottom: 1rem; /* Space between paragraphs */
    }
    #sbs-r-870 .cs-content ul {
        list-style-type: disc; /* Add bullet points */
        padding-left: 1.5rem; /* Indent list items */
        margin-bottom: 1.5rem; /* Space below the list */
    }
    #sbs-r-870 .cs-content ul li {
        margin-bottom: 0.75rem; /* Space between list items */
    }
    #sbs-r-870 .cs-button-solid {
        font-size: 1rem;
        line-height: clamp(2.875rem, 5.5vw, 3.5rem);
        text-decoration: none;
        font-weight: 700;
        text-align: center;
        margin-top: 2rem; /* Add spacing above the button */
        color: #fff;
        min-width: 9.375rem;
        padding: 0 1.5rem;
        background-color: var(--primary);
        border-radius: 0.25rem;
        display: inline-block;
        position: relative;
        z-index: 1;
        box-sizing: border-box;
    }
    #sbs-r-870 .cs-button-solid:before {
        content: "";
        position: absolute;
        height: 100%;
        width: 0%;
        background: #000;
        opacity: 1;
        top: 0;
        left: 0;
        z-index: -1;
        border-radius: 0.25rem;
        transition: width 0.3s;
    }
    #sbs-r-870 .cs-button-solid:hover:before {
        width: 100%;
    }
}

/* Desktop - 1024px */
@media only screen and (min-width: 64rem) {
    #sbs-r-870 {
        padding: var(--sectionPadding);
    }

    #sbs-r-870 .cs-container {
        flex-direction: row; /* Preserve side-by-side layout for content */
        max-width: 80rem; /* 1280px */
        justify-content: space-between;
        align-items: flex-start; /* Align everything to the top */
    }

    #sbs-r-870 .cs-images-wrapper {
        display: flex;
        flex-direction: column; /* Stack images vertically */
        width: 47%; /* Ensure images wrapper occupies the same space as before */
        gap: 5.6rem; /* Maintain spacing between stacked images */
        align-self: flex-start; /* Ensure the images wrapper starts at the top */
    }

    #sbs-r-870 .cs-content {
        width: 53%; /* Retain content width */
        padding: 0;
        order: 1; /* Move content to the right */
    }

    #sbs-r-870 .cs-picture {
        width: 100%; /* Ensure images fill the wrapper */
        height: auto; /* Maintain aspect ratio */
    }

    #sbs-r-870 .cs-picture img {
        display: block; /* Prevent inline spacing issues */
        width: 100%; /* Ensure image takes full width of its container */
        height: auto; /* Maintain natural aspect ratio */
        object-fit: cover; /* Ensure content fits within the container */
    }
}



